.row
  .col-md-12.text-center
    h1 Tasks
.row
  .col-md-12
    table.table.table-striped#tasks-list
      thead
        tr
          th Id
          th Name
          th Description
          th Created at
          th State
          th Change state
          th
          th
          th

      tbody
        - @tasks.each do |task|
          tr
            td = task.id
            td = task.name
            td = task.description
            td = task.created_at
            td = task.state
            td.text-center = render_task_state_links(task)
            td = link_to 'Show', task
            td = link_to 'Edit', edit_task_path(task)
            td = link_to 'Destroy', task, data: { confirm: 'Are you sure?' }, method: :delete
